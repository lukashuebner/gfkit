{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "Default build options",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "TDT_EXPENSIVE_TESTS": "Off",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relwithdeb",
            "displayName": "ReleaseWithDebugInfo",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/relwithdeb",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "TDT_TEST_ENABLE_SANITIZERS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdeb",
            "configurePreset": "relwithdeb"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "release",
            "configurePreset": "release",
            "inherits": "default"
        },
        {
            "name": "relwithdeb",
            "configurePreset": "relwithdeb",
            "inherits": "default"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "inherits": "default"
        }
    ]
}
